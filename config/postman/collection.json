          ],
          "path": [
            "users",
            "{{user-id}}"
          ]
        }
      },
      "response": []
    },
    {
      "name": "DeleteUser",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (responseCode.code == 204) {\r",
              "    pm.environment.set(\"user-id\", \"00000000-0000-0000-0000-000000000000\");    \r",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{user-command-host}}/users/{{user-id}}",
          "host": [
            "{{user-command-host}}"
          ],
          "path": [
            "users",
            "{{user-id}}"
          ]
        }
      },
      "response": []
    },
