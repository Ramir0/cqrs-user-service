{
  "info": {
    "_postman_id": "494e19c1-5be5-44e5-8124-1114bcddf098",
    "name": "UserService",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "124234"
  },
  "item": [
    {
      "name": "Oauth",
      "item": [
        {
          "name": "1 - Get Login Session",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{user-auth-host}}/oauth2/authorize?response_type=code&client_id=client-app&scope=openid profile read&redirect_uri={{user-auth-host}}/auth/code",
              "host": [
                "{{user-auth-host}}"
              ],
              "path": [
                "oauth2",
                "authorize"
              ],
              "query": [
                {
                  "key": "response_type",
                  "value": "code"
                },
                {
                  "key": "client_id",
                  "value": "client-app"
                },
                {
                  "key": "scope",
                  "value": "openid profile read"
                },
                {
                  "key": "redirect_uri",
                  "value": "{{user-auth-host}}/auth/code"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "2 - Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (responseCode.code == 200) {\r",
                  "    pm.environment.set(\"auth-code\", responseBody);\r",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "username",
                  "value": "user",
                  "type": "text"
                },
                {
                  "key": "password",
                  "value": "123",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{user-auth-host}}/login",
              "host": [
                "{{user-auth-host}}"
              ],
              "path": [
                "login"
              ]
            }
          },
          "response": []
        },
        {
          "name": "3 - Generate Token",
          "request": {
            "auth": {
              "type": "basic",
              "basic": [
                {
                  "key": "password",
                  "value": "client-secret",
                  "type": "string"
                },
                {
                  "key": "username",
                  "value": "client-app",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "code",
                  "value": "{{auth-code}}",
                  "type": "text"
                },
                {
                  "key": "grant_type",
                  "value": "authorization_code",
                  "type": "text"
                },
                {
                  "key": "redirect_uri",
                  "value": "{{user-auth-host}}/auth/code",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{user-auth-host}}/oauth2/token",
              "host": [
                "{{user-auth-host}}"
              ],
              "path": [
                "oauth2",
                "token"
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "CreateUser",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (responseCode.code == 201) {\r",
              "    const body = JSON.parse(responseBody);\r",
              "    pm.environment.set(\"user-id\", body.id);\r",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\r\n    \"username\": \"NewUsername\",\r\n    \"password\": \"New.Password123#\",\n    \"name\": \"NewName\",\r\n    \"lastname\": \"NewLastname\",\r\n    \"email\": \"new_email@test.com\",\r\n    \"status\": \"ACTIVE\",\r\n    \"gender\": \"MALE\"\r\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{user-command-host}}/users",
          "host": [
            "{{user-command-host}}"
          ],
          "path": [
            "users"
          ]
        }
      },
      "response": []
    },
    {
      "name": "UpdateUser",
      "request": {
        "method": "PUT",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\r\n    \"username\": \"UpdatedUsername\",\r\n    \"name\": \"UpdatedName\",\r\n    \"lastname\": \"UpdatedLastname\",\r\n    \"email\": \"updated_email@test.com\",\r\n    \"status\": \"INACTIVE\",\r\n    \"gender\": \"NON_BINARY\"\r\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{user-command-host}}/users/{{user-id}}",
